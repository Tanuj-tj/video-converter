{
  "family": "video-converter-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/VideoConverterTaskRole",
  "containerDefinitions": [
    {
      "name": "video-converter",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/video-converter:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "UPLOAD_BUCKET",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/video-converter/upload-bucket"
        },
        {
          "name": "CONVERTED_BUCKET",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/video-converter/converted-bucket"
        },
        {
          "name": "SQS_QUEUE_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/video-converter/sqs-queue-url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/video-converter",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}